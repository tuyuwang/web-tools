{
  "name": "tool",
  "version": "1.0.0",
  "description": "高可用、高访问的静态工具网站",
  "main": "index.js",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "build:optimized": "next build && node scripts/optimize-build.js",
    "build:package": "node scripts/build-package.js",
    "start": "next start",
    "lint": "next lint",
    "format": "prettier --write .",
    "type-check": "tsc --noEmit",
    "analyze": "ANALYZE=true npm run build",
    "size-check": "npm run build && node scripts/optimize-build.js",
    "build:static": "next build && next export",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false"
  },
  "keywords": [
    "tools",
    "web",
    "utilities",
    "pwa"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@types/node": "^20.0.0",
    "@types/qrcode": "^1.5.5",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "autoprefixer": "^10.4.0",
    "clsx": "^2.1.1",
    "eslint": "^8.0.0",
    "eslint-config-next": "^14.0.0",
    "lucide-react": "^0.535.0",
    "next": "^14.0.0",
    "postcss": "^8.4.0",
    "prettier": "^3.0.0",
    "qrcode": "^1.5.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^3.3.0",
    "typescript": "^5.0.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.6.4",
    "@testing-library/react": "^14.3.1",
    "@testing-library/user-event": "^14.6.1",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0"
  }
}
