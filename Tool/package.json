{
  "name": "tool",
  "version": "1.0.0",
  "description": "高可用、高访问的静态工具网站",
  "main": "index.js",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "build:static": "node scripts/build-static.js",
    "build:optimized": "next build && node scripts/optimize-build.js",
    "build:package": "node scripts/build-package.js",
    "start": "next start",
    "lint": "next lint",
    "format": "prettier --write .",
    "type-check": "tsc --noEmit",
    "analyze": "ANALYZE=true npm run build",
    "size-check": "npm run build && node scripts/optimize-build.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "submit-sitemap": "node scripts/submit-sitemap.js",
    "deploy:full": "npm run build:static && npm run submit-sitemap",
    "verify-supabase": "node scripts/verify-supabase.js",
    "verify-feedback": "node scripts/verify-feedback-config.js"
  },
  "keywords": [
    "tools",
    "web",
    "utilities",
    "pwa"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@supabase/supabase-js": "^2.53.0",
    "@types/node": "^20.19.9",
    "@types/qrcode": "^1.5.5",
    "@types/react": "^18.3.23",
    "@types/react-dom": "^18.3.7",
    "@types/recharts": "^1.8.29",
    "autoprefixer": "^10.4.21",
    "critters": "^0.0.23",
    "dotenv": "^17.2.1",
    "eslint": "^8.57.1",
    "eslint-config-next": "^14.2.31",
    "lucide-react": "^0.536.0",
    "next": "^14.2.31",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "qrcode": "^1.5.4",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.9.2"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.6.4",
    "@testing-library/react": "^14.3.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^30.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0"
  }
}
